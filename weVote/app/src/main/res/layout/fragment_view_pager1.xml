<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ViewPagerFragment1">

    <!-- Use a LinearLayout as a container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:padding="28dp"
            android:src="@raw/frag1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digital Democracy"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shaping the Future Together - Embrace Technology for a Stronger, Inclusive Democracy."
            android:textColor="@android:color/white"
            android:layout_marginHorizontal="11dp"
            android:textSize="14sp"
            android:gravity="center"
            />

    </LinearLayout>

</FrameLayout>
